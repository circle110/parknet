<%= render(:partial => 'shared/error_messages', :locals => {:object => @fund}) %>
<%= link_to("<<Back to Funds List", {:action => 'list'}, :class => 'back-link') %>

<div class="fund new">
	<h2>Edit Fund</h2>
	<%= form_for @fund, url: {action: "update"}, html: {class: "input_form"} do |f| %>
	<%= f.hidden_field(:agency_id, :value => session[:agency_id]) %>
	<%= f.hidden_field(:user_stamp, :value => session[:staff_user_id]) %>
		<table summary="Fund form fields">
			<tr>
				<th>Fund Name</th>
				<td><%= f.text_field(:name) %></td>
			</tr>
			<tr>
				<th>Fund Number</th>
				<td><%= f.text_field(:fund) %></td>
			</tr>
			<tr>
				<th>Active</th>
				<td><%= f.check_box(:active) %></td>
			</tr>
			<tr>
				<td colspan="2"><%= f.submit "Post Fund Edits" %>
				</td>
			</tr>
		</ table>

	<% end %>
</ div>		