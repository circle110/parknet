<%= link_to("<<Back to Brochure Subsection List", {:action => 'list'}, :class => 'back-link') %>

<div class="brochure section update">
	<h2>Edit Brochure Subsection</h2>
	<%= form_for @brochure_subsection, url: {action: "update"}, html: {class: "input_form"} do |f| %>
		<table summary="Brochure Subsection fields">
			<tr>
				<th>Agency ID</th>
				<td><%= f.text_field(:agency_id) %></td>
			</tr>
			<tr>
				<th>Brochure Section</th>
				<td><%= f.select(:brochure_section_id, BrochureSection.all.collect {|s| [s.name, s.id]}) %></td>
			</tr>
			<tr>
				<th>Name</th>
				<td><%= f.text_field(:name) %></td>
			</tr>						
			<tr>
				<th>Active</th>
				<td><%= f.text_field(:active) %></td>
			</tr>
			<tr>
				<th>Description</th>
				<td><%= f.text_field(:description) %></td>
			</tr>
			<tr>
				<th>User Stamp Id</th>
				<td><%= f.text_field(:user_stamp) %></td>
			</tr>
			<tr>
				<td colspan="2"><%= f.submit "Post Brochure Subsection Edits" %>
				</td>
			</tr>
		</ table>

	<% end %>
</ div>	