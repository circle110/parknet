<div class="facility list"><h2>Maintain Facilities</h2><%= link_to("Add New Facility", :action => 'new', :class => 'action new') %><p><table summary="Facility" class=listing">	<ul>	<% @facilities.each do |facility| %>		<% if facility.parent_facility_id == 0 %>			<li><%= link_to(facility.name, {:action => 'edit', :id => facility.id}, :class => 'action_edit') %></li>			<% child_facility = Facility.where("parent_facility_id = ?", facility.id) %>			<% if child_facility %>				<ul>				<% child_facility.each do |child| %>					<li><%= link_to(child.name, {:action => 'edit', :id => child.id}, :class => 'action_edit') %></li>						<% grandchild_facility = Facility.where("parent_facility_id = ?", child.id) %>						<% if grandchild_facility %>							<ul>							<% grandchild_facility.each do |grandchild| %>							<li><%= link_to(grandchild.name, {:action => 'edit', :id => grandchild.id}, :class => 'action_edit') %></li>							<% end %>							</ul>						<% end %>				<% end %>				</ul>			<% end %>		<% end %>	<% end %></table></div>	