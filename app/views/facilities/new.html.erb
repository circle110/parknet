<%= link_to("<<Back to Facility List", {:action => 'list'}, :class => 'back-link') %>

<div class="facility new">
	<h2>Create Facility</h2>
	
	<%= form_for(:facility, :url => {:action => 'create'}) do |f| %>
		<table summary="Facility form fields">
			<tr>
				<th>Facility Name</th>
				<td><%= f.text_field(:name) %></td>
			</tr>
			<tr>
				<th>Agency ID</th>
				<td><%= f.text_field(:agency_id) %></td>
			</tr>
			<tr>
				<th>Facility Type Id</th>
				<td><%= f.text_field(:facility_type_id) %></td>
			</tr>
			<tr>
				<th>Facility Supervisor Id</th>
				<td><%= f.text_field(:facility_supervisor_id) %></td>
			</tr>
			<tr>
				<th>Parent Facility Id</th>
				<td><%= f.text_field(:parent_facility_id) %></td>
			</tr>
			<tr>
				<th>Internet Query Flag</th>
				<td><%= f.text_field(:internet_query_flag) %></td>
			</tr>
			<tr>
				<th>Deposit Required Flag</th>
				<td><%= f.text_field(:deposit Required Flag) %></td>
			</tr>
			<tr>
				<th>Internet Availability Flag</th>
				<td><%= f.text_field(:internet_availability_flag) %></td>
			</tr>
			<tr>
				<th>Active?</th>
				<td><%= f.text_field(:active) %></td>
			</tr>
			<tr>
				<th>Deposit Amount</th>
				<td><%= f.text_field(:deposit_amount) %></td>
			</tr>
			<tr>
				<th>Alert Text</th>
				<td><%= f.text_field(:alert_text) %></td>
			</tr>
			<tr>
				<th>Active?</th>
				<td><%= f.text_field(:conrifmation_text) %></td>
			</tr>
			<tr>
				<th>Description</th>
				<td><%= f.text_field(:description) %></td>
			</tr>
		</ table>
	<% end %>
</ div>		