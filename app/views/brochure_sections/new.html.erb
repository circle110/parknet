<%= link_to("<<Back to Brochure Section List", {:action => 'list'}, :class => 'back-link') %>

<div class="brochure section new">
	<h2>Create New Brochure Section</h2>
	<%= form_for @brochure_section, url: {action: "create"}, html: {class: "input_form"} do |f| %>
		<%= f.hidden_field(:agency_id, :value => session[:agency_id]) %>
		<%= f.hidden_field(:user_stamp, :value => session[:staff_user_id]) %>
		
		<table summary="Brochure Section fields">
			<tr>
				<th>Name</th>
				<td><%= f.text_field(:name) %></td>
			</tr>						
			<tr>
				<th>Active</th>
				<td><%= f.check_box(:active) %></td>
			</tr>
			<tr>
				<th>Description</th>
				<td><%= f.text_area(:description, size: "40x2") %></td>
			</tr>
			<tr>
				<td colspan="2"><%= f.submit "Create New Brochure Section" %>
				</td>
			</tr>
		</ table>

	<% end %>
</ div>		