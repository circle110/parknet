<h1>Staff Log In</h1>

<%= form_tag staff_sessions_path do %>

<p>
<%= label_tag :location_id, "Location" %>
<%= select_tag "location_id", options_from_collection_for_select(@locations, "id", "name"), prompt: "--Select Location--" %>
</p>

<p>
<%= label_tag :email %>
<%= text_field_tag :email, params[:email] %>
</p>

<p>
<%= label_tag :password %>
<%= password_field_tag :password %>
</p>

<p class="button"><%= submit_tag "Log In" %></p>

<% end %>
